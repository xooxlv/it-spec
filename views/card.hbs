<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<title>{{ title }}</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="../css/card.css">
	<link rel="stylesheet" href="../css/common.css">
	<link rel="stylesheet" href="../css/header-footer.css">
</head>

<body>
	{{> miniheader }}

	<section class="pt-5">
		<div class="container text-center mb-5">
			<h2>{{ activity.service_name }}</h2>
		</div>

		<div class="container custom-container">
			<div class="row align-items-center">
				<div class="col-md-6 col-sm-12">
					<img src="../{{ activity.img_path }}" class="custom-img-r" alt="">
				</div>
				<div class="col-md-6 col-sm-12">
					<p class="text-center">{{ activity.long_description_main }}</p>
				</div>
			</div>
		</div>

		<div class="container custom-container">
			<div class="row align-items-center">
				<div class="col-md-6 col-sm-12">
					<p class="text-center">{{ activity.long_description_secondary }}</p>
				</div>
				<div class="col-md-6 col-sm-12">
					<img src="../{{ activity.img_alt_path }}" class="custom-img-l" alt="">
				</div>
			</div>
		</div>

		<div class="container custom-container">
			<div class="row align-items-center">
				<div class="col-sm-12">
					<p class="text-center p-3">{{ activity.long_description_final }}</p>

				</div>
			</div>
		</div>


	</section>



	{{> footer }}

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>