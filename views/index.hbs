<!doctype html>
<html lang="ru">

<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/png" href="img/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="css/header-footer.css">
    <link rel="stylesheet" href="css/card.css">
    <link rel="stylesheet" href="css/common.css">
    <link rel="stylesheet" href="css/popup.css">
    <link rel="stylesheet" href="css/truba.css">
    
</head>

<body>
    {{> header }}

    {{> truba }}

    <div class="modal fade" id="popupModal" tabindex="-1" aria-labelledby="popupModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="popupModalLabel">Форма заявки</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Имя:</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Номер телефона:</label>
                            <input type="tel" class="form-control" id="phone" name="phone" required>
                        </div>
                        <div class="mb-3">
                            <label for="task" class="form-label">Задача:</label>
                            <textarea class="form-control" id="task" name="task" rows="4" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="attachment" class="form-label">Прикрепленное вложение:</label>
                            <input type="file" class="form-control" id="attachment" name="attachment">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary" id="send-request-btn">Отправить заявку</button>

                </div>
            </div>
        </div>
    </div>

    <section class="pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2>{{ activities.title }}</h2>
                </div>
            </div>

            <div class="row">
                {{#each activities.list}}
                <div class="col-xl-4 col-md-6 col-sm-12 mb-3">
                    <div class="card">
                        <img src="{{this.img_path}}" class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 class="card-title">{{this.service_name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="card/{{@index}}" class="btn btn-primary">Подробнее</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    {{> footer }}



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/common.js"></script>

    <script>
        // collect data from popup and send to server
        document.getElementById('send-request-btn').addEventListener('click', async () => {
            const form = document.querySelector('#popupModal form');
            const formData = new FormData(form);

            try {
                const response = await fetch('/appeal', {
                    method: 'POST',
                    body: formData,
                });

                console.log(response);
                if (response.status == 200) {
                    form.reset();
                    $('#popupModal').modal('hide');
                    $('#success-message').toast({
                        delay: 3000 // Время отображения всплывающего окна в миллисекундах (3 секунды)
                    });

                    $('#success-message').toast('show');
                } else {
                    throw new Error(`Ошибка: ${response.statusText}`);
                }
            } catch (error) {
                $('#error-message').toast('show');

            }
        });

        // show popup after main button click
        function get_consult() {
            var modalElement = document.getElementById('popupModal');
            var myModal = new bootstrap.Modal(modalElement);
            myModal.show();
        }

    </script>
</body>

</html>